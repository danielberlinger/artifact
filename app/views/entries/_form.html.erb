<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <label for="entry_tags">Tags (comma seperated, no spaces)</label><br />
    <textarea cols="40" id="entry_tags" name="entry[tags]" rows="20"><%= @entry.tags.collect {|tag| tag["name"]}.join(",") %></textarea>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
